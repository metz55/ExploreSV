@using ExploreSV.BusinessLogic.Utils
@model PaginatedList<ExploreSV.BusinessLogic.DTOs.CategoryResponse>

@{
    ViewData["Title"] = "Categorías";
}

<div class="categories-container">
    <div class="categories-header">
        <h1 class="categories-title">
            <i class="fas fa-list-alt"></i> Categorías
        </h1>
        <a asp-action="Create" class="btn btn-create">
            <i class="fas fa-plus-circle"></i> Nueva Categoría
        </a>
    </div>

    <div class="table-responsive" style="display: flex; justify-content: center;">
        <table class="table table-premium" style="width: auto; min-width: 500px;">
            <thead>
                <tr>
                    <th style="padding: 10px 20px;">Nombre de la Categoría</th>
                    <th style="padding: 10px 20px; text-align: center;">Acción</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Items.Any())
                {
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td style="padding: 10px 20px;">
                                @Html.DisplayFor(modelItem => item.CategoryName)
                            </td>
                            <td style="padding: 10px 20px; text-align: center;">
                                <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-delete">
                                    <i class="fas fa-trash-alt"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" class="no-categories">
                            <i class="fas fa-inbox fa-2x mb-2"></i>
                            <p>No hay categorías registradas</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Controles de paginación -->
    @if (Model != null && Model.TotalPages > 1)
    {
        <div class="pagination-controls" style="margin-top:18px; display:flex; justify-content:center; align-items:center; gap:12px;">
            @if (Model.HasPreviousPage)
            {
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageNumber - 1)"
                   asp-route-pageSize="@Model.PageSize"
                   class="pagination-btn">← Anterior</a>
            }
            else
            {
                <span class="pagination-btn disabled" aria-disabled="true" style="opacity:0.5; cursor:default;">← Anterior</span>
            }

            <span class="pagination-info">Página @Model.PageNumber de @Model.TotalPages</span>

            @if (Model.HasNextPage)
            {
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageNumber + 1)"
                   asp-route-pageSize="@Model.PageSize"
                   class="pagination-btn">Siguiente →</a>
            }
            else
            {
                <span class="pagination-btn disabled" aria-disabled="true" style="opacity:0.5; cursor:default;">Siguiente →</span>
            }
        </div>
    }
</div>

