@model ExploreSV.BusinessLogic.UseCases.Users.Queries.GetUserAuthenticated.GetUserAuthenticatedQuery

@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />

<!--Sirve para que se muestre el ojo de mostrar contraseña-->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <h1>Inicio de Sesion</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Nombre</label>
                <input asp-for="userName" class="form-control" />
            </div>
            <div class="form-group password-container">
                <label asp-for="userPassword" class="control-label">Contraseña</label>
                <div class="password-input-wrapper">
                    <input asp-for="userPassword" type="password" class="form-control" id="passwordField" />
                    <span class="password-toggle" onclick="togglePassword()">
                        <i class="fas fa-eye" id="toggleIcon"></i>
                    </span>
                </div>
            </div>
            <div class="form-group-3">
                <input type="submit" value="Iniciar Sesion" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function togglePassword() {
            const passwordField = document.getElementById('passwordField');
            const toggleIcon = document.getElementById('toggleIcon');

            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordField.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }
    </script>
}