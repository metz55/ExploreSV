@model ExploreSV.BusinessLogic.DTOs.CreateUserRequest

@{
    ViewData["Title"] = "Crear Usuario";
}

<!--Sirve para que se muestre el ojo de mostrar contraseña-->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<div class="create-container">
    <div class="create-header">
        <h1 class="create-title">
            <i class="fas fa-user-plus"></i> Crear Usuario
        </h1>
        <p class="create-subtitle">Complete los datos requeridos</p>
    </div>

    <div class="form-container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="validation-message"></div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label class="form-label">Nombre de Usuario</label>
                    <input asp-for="UserName" class="form-control form-control-custom" />
                    <span asp-validation-for="UserName" class="validation-message"></span>
                </div>

                <div class="form-group col-md-6">
                    <label class="form-label">Rol</label>
                    <select asp-for="RoleId" class="form-control form-control-custom" asp-items="ViewBag.RoleId"></select>
                    <span asp-validation-for="RoleId" class="validation-message"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="form-label">Contraseña</label>
                <div class="password-input-container">
                    <input asp-for="UserPassword" type="password" class="form-control form-control-custom" id="passwordField" />
                    <span class="password-toggle" onclick="togglePassword()">
                        <i class="fas fa-eye" id="toggleIcon"></i>
                    </span>
                </div>
                <span asp-validation-for="UserPassword" class="validation-message"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-submit">
                    <i class="fas fa-save"></i> Guardar
                </button>
                <a asp-action="Index" class="btn-cancel">
                    <i class="fas fa-times"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background: linear-gradient(to bottom, #e3f2fd, #ffffff);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .create-container {
        max-width: 700px;
        margin: 2rem auto;
        padding: 2rem;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .create-header {
        text-align: center;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #f1f1f1;
    }

    .create-title {
        color: #6c5ce7;
        font-weight: 700;
        font-size: 1.8rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .create-subtitle {
        color: #6c757d;
        font-size: 1.1rem;
        margin-top: 0.5rem;
    }

    .form-container {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 1.5rem;
        margin: 1.5rem 0;
    }

    .form-row {
        display: flex;
        flex-wrap: wrap;
        margin-right: -15px;
        margin-left: -15px;
    }

    .form-group {
        margin-bottom: 1.5rem;
        padding-right: 15px;
        padding-left: 15px;
        flex: 1 0 0%;
    }

    .form-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
        display: block;
    }

    .form-control-custom {
        width: 100%;
        border-radius: 6px;
        border: 1px solid #ced4da;
        padding: 0.5rem 1rem;
        transition: all 0.3s ease;
        height: calc(1.5em + 0.75rem + 2px);
    }

        .form-control-custom:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .validation-message {
        color: #dc3545;
        font-size: 0.85rem;
        margin-top: 0.25rem;
    }

    .form-actions {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn-submit {
        background-color: #6c5ce7;
        color: white;
        border: none;
        border-radius: 6px;
        padding: 0.5rem 1.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .btn-submit:hover {
            background-color: #5649c0;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(108, 92, 231, 0.3);
            color: white;
            text-decoration: none;
        }

    .btn-cancel {
        background-color: #6c757d;
        color: white;
        border: none;
        border-radius: 6px;
        padding: 0.5rem 1.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .btn-cancel:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(108, 117, 125, 0.3);
            color: white;
            text-decoration: none;
        }

    .password-input-container {
        position: relative;
    }

    .password-toggle {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #6c757d;
    }

        .password-toggle:hover {
            color: #495057;
        }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function togglePassword() {
            const passwordField = document.getElementById('passwordField');
            const toggleIcon = document.getElementById('toggleIcon');

            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordField.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }
    </script>
}