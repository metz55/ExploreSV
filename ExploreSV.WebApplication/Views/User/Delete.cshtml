@model ExploreSV.BusinessLogic.DTOs.UserResponse
@{
    ViewData["Title"] = "Eliminar Usuario";
}
<div class="delete-container">
    <div class="delete-header">
        <h1 class="delete-title">
            <i class="fas fa-user-times"></i> Eliminar Usuario
        </h1>
        <p class="delete-subtitle">¿Está seguro que desea eliminar este usuario?</p>
    </div>
    <div class="user-details">
        <h4>Información del Usuario</h4>
        <hr />
        <div class="detail-row">
            <div class="detail-label">ID:</div>
            <div class="detail-value">@Html.DisplayFor(model => model.UserId)</div>
        </div>
        <div class="detail-row">
            <div class="detail-label">Nombre:</div>
            <div class="detail-value">@Html.DisplayFor(model => model.UserName)</div>
        </div>
    </div>
    <form asp-action="DeleteConfirmed">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="UserId" />
        <div class="delete-actions">
            <button type="submit" class="btn-delete">
                <i class="fas fa-trash-alt"></i> Confirmar Eliminación
            </button>
            <a asp-action="Index" class="btn-cancel">
                <i class="fas fa-times"></i> Cancelar
            </a>
        </div>
    </form>
</div>

<style>
    body {
        background: linear-gradient(to bottom, #e3f2fd, #ffffff);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .delete-container {
        max-width: 600px;
        margin: 2rem auto;
        padding: 2rem;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .delete-header {
        text-align: center;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #f1f1f1;
    }

    .delete-title {
        color: #dc3545;
        font-weight: 700;
        font-size: 1.8rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .delete-subtitle {
        color: #6c757d;
        font-size: 1.1rem;
        margin-top: 0.5rem;
    }

    .user-details {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 1.5rem;
        margin: 1.5rem 0;
    }

        .user-details h4 {
            color: #495057;
            margin-bottom: 1rem;
        }

    .detail-row {
        display: flex;
        margin-bottom: 1rem;
        align-items: center;
    }

    .detail-label {
        font-weight: 600;
        color: #495057;
        width: 120px;
    }

    .detail-value {
        color: #212529;
        flex: 1;
    }

    .delete-actions {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn-delete {
        background-color: #dc3545;
        color: white;
        border: none;
        border-radius: 6px;
        padding: 0.5rem 1.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .btn-delete:hover {
            background-color: #c82333;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(220, 53, 69, 0.3);
            color: white;
        }

    .btn-cancel {
        background-color: #6c757d;
        color: white !important;
        border: none;
        border-radius: 6px;
        padding: 0.5rem 1.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .btn-cancel:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(108, 117, 125, 0.3);
            color: white !important;
            text-decoration: none;
        }

    @@media (max-width: 768px) {
        .delete-container {
            padding: 1.5rem;
            margin: 1rem;
        }

        .delete-title {
            font-size: 1.5rem;
        }

        .delete-subtitle {
            font-size: 1rem;
        }
    }

    @@media (max-width: 576px) {
        .delete-actions {
            flex-direction: column;
            gap: 0.5rem;
        }

        .btn-delete,
        .btn-cancel {
            width: 100%;
            justify-content: center;
        }

        .detail-row {
            flex-direction: column;
            align-items: flex-start;
        }

        .detail-label {
            width: 100%;
            margin-bottom: 0.25rem;
        }
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}