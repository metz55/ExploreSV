@model ExploreSV.BusinessLogic.DTOs.StatusResponse

@{
    ViewData["Title"] = "Eliminar";
}

<div class="delete-container">
    <div class="delete-header">
        <h1 class="delete-title">
            <i class="fas fa-exclamation-triangle"></i> Eliminar Estado
        </h1>
        <p class="delete-subtitle">¿Está seguro que desea eliminar el registro?</p>
    </div>

    <div class="status-details">
        <h4>Detalles del Estado</h4>
        <hr />

        <div class="detail-row">
            <div class="detail-label">Nombre:</div>
            <div class="detail-value">@Html.DisplayFor(model => model.StatusName)</div>
        </div>
    </div>

    <form asp-action="Delete">
        <div class="delete-actions">
            <button type="submit" class="btn-delete">
                <i class="fas fa-trash-alt"></i> Confirmar Eliminación
            </button>
            <a asp-action="Index" class="btn-cancel">
                <i class="fas fa-times"></i> Cancelar
            </a>
        </div>
    </form>
</div>

<style>
    body {
        background: linear-gradient(to bottom, #e3f2fd, #ffffff);
    }

    .delete-container {
        max-width: 600px;
        margin: 2rem auto;
        padding: 2rem;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .delete-header {
        text-align: center;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 2px solid #f1f1f1;
    }

    .delete-title {
        color: #dc3545;
        font-weight: 700;
        font-size: 1.8rem;
    }

    .delete-subtitle {
        color: #6c757d;
        font-size: 1.1rem;
    }

    .status-details {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 1.5rem;
        margin: 1.5rem 0;
    }

    .detail-row {
        display: flex;
        margin-bottom: 1rem;
    }

    .detail-label {
        font-weight: 600;
        color: #495057;
        width: 120px;
    }

    .detail-value {
        color: #212529;
        flex: 1;
    }

    .delete-actions {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn-delete {
        background-color: #dc3545;
        color: white;
        border: none;
        border-radius: 6px;
        padding: 0.5rem 1.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn-delete:hover {
            background-color: #c82333;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(220, 53, 69, 0.3);
        }

    .btn-cancel {
        background-color: #6c757d;
        color: white !important;
        border: none;
        border-radius: 6px;
        padding: 0.5rem 1.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
        text-decoration: none;
    }

        .btn-cancel:hover {
            background-color: #5a6268;
            color: white !important;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(108, 117, 125, 0.3);
            text-decoration: none;
        }
</style>
