@model IEnumerable<ExploreSV.BusinessLogic.DTOs.StatusResponse>

@{
    ViewData["Title"] = "Estados";
}

<div class="status-container">
    <div class="status-header">
        <h1 class="status-title">
            <i class="fas fa-map-marked-alt"></i> Estados
        </h1>
        <a asp-action="Create" class="btn btn-create">
            Nuevo Estado
        </a>
    </div>

    <div class="table-responsive" style="display: flex; justify-content: center;">
        <table class="table table-premium" style="width: auto; min-width: 500px;">
            <thead>
                <tr>
                    <th style="padding: 10px 20px;">Nombre del Estado</th>
                    <th style="padding: 10px 20px; text-align: center;">Acción</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="padding: 10px 20px;">
                                @Html.DisplayFor(modelItem => item.StatusName)
                            </td>
                            <td style="padding: 10px 20px; text-align: center;">
                                <a asp-action="Delete" asp-route-id="@item.StatusId" class="btn btn-delete">
                                    Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" class="no-status">
                            <i class="fas fa-inbox fa-2x mb-2"></i>
                            <p>No hay estados registrados</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    body {
        background: linear-gradient(to bottom, #e3f2fd, #ffffff);
    }

    .status-container {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
        padding: 20px 30px !important;
        margin-top: 15px !important;
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
    }

    .status-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px !important;
        padding-bottom: 8px;
        border-bottom: 2px solid #f1f1f1;
    }

    .status-title {
        color: #2c3e50;
        font-weight: 700;
        margin: 0;
        font-size: 1.5rem;
    }

    .btn-create {
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 6px;
        padding: 8px 16px;
        font-weight: 500;
        transition: all 0.3s ease;
        font-size: 0.9rem;
    }

        .btn-create:hover {
            background-color: #218838;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            color: white;
            text-decoration: none;
        }

    .table-premium {
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
        margin: 0 auto;
    }

        .table-premium thead tr {
            background: linear-gradient(135deg, #007bff 0%, #00b4ff 100%);
            color: white;
        }

        .table-premium tbody tr {
            transition: all 0.2s ease;
        }

            .table-premium tbody tr:hover {
                background-color: #f8f9fa;
                transform: translateY(-1px);
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            }

    .btn-delete {
        border-radius: 6px;
        padding: 6px 12px;
        font-size: 0.8rem;
        font-weight: 500;
        transition: all 0.2s ease;
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        background-color: #dc3545;
        color: white !important;
    }

        .btn-delete:hover {
            transform: translateY(-2px);
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
            text-decoration: none;
            background-color: #c82333;
            color: white !important;
        }

    .no-status {
        text-align: center;
        padding: 15px;
        color: #6c757d;
        font-style: italic;
        font-size: 0.9rem;
    }
</style>