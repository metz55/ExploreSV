@model ExploreSV.BusinessLogic.DTOs.TouristDestinationByIdResponse
@using ExploreSV.Entities;

@{
    ViewData["Title"] = "Detalles";
}

<div class="destination-detail-container">
    <div class="card destination-card">
        <!-- Cabecera con título -->
        <div class="card-header destination-header">
            <h1 class="destination-title">@Model.TouristDestinationTitle</h1>
        </div>

        <!-- Cuerpo principal -->
        <div class="card-body info-section">
            <div class="row">
                <!-- Columna de información -->
                <div class="col-md-12">
                    <div class="mb-4">
                        <h4 class="section-title"><i class="fas fa-info-circle"></i> Descripción</h4>
                        <p class="detail-value">@Html.Raw(Model.TouristDestinationDescription)</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6 detail-item">
                            <h5 class="section-title"><i class="fas fa-map-marker-alt"></i> Ubicación</h5>
                            <p class="detail-value">@Model.TouristDestinationLocation</p>
                        </div>
                        <div class="col-md-6 detail-item">
                            <h5 class="section-title"><i class="fas fa-clock"></i> Horario</h5>
                            <p class="detail-value">@Model.TouristDestinationSchedule</p>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-6 detail-item">
                            <h5 class="section-title"><i class="fas fa-globe-americas"></i> Departamento</h5>
                            <p class="detail-value">@Model.DepartamentName</p>
                        </div>

                        <div class="col-md-6 detail-item">
                            <h5 class="section-title"><i class="fas fa-tag"></i> Categoría</h5>
                            <p class="detail-value">@Model.CategoryName</p>
                        </div>
                    </div>

                    @* <div class="row mt-3">
                        <div class="col-md-6 detail-item">
                            <h5 class="section-title"><i class="fas fa-check-circle"></i> Estado</h5>
                            <p class="detail-value">@Model.StatusId</p>
                        </div>
                    </div> *@
                </div>
            </div>

            <!-- Sección del Carrusel -->
            <div class="images-section">
                <h3 class="images-title"><i class="fas fa-images"></i> Imágenes del Destino Turístico</h3>

                @if (Model.Images != null && Model.Images.Any())
                {
                    <div class="carousel-container">
                        <div id="destinationCarousel" class="carousel slide" data-bs-ride="carousel">
                            <!-- Indicadores -->
                            <div class="carousel-indicators">
                                @{
                                    int counter = 0; // Contador para los indicadores
                                }
                                @foreach (var _ in Model.Images)
                                {
                                    <button type="button" data-bs-target="#destinationCarousel"
                                            data-bs-slide-to="@counter" class="@(counter == 0 ? "active" : "")"></button>
                                    counter++;
                                }
                            </div>

                            <!-- Imágenes -->
                            <div class="carousel-inner">
                                @{
                                    bool isFirst = true; // Para marcar el primer item como active
                                }
                                @foreach (var image in Model.Images)
                                {
                                    <div class="carousel-item @(isFirst ? "active" : "")">
                                        <img src="@image.ImageUrl" class="d-block w-100"
                                             alt="Imagen de @Model.TouristDestinationTitle">
                                    </div>
                                    isFirst = false;
                                }
                            </div>

                            <!-- Controles (se mantienen igual) -->
                            <button class="carousel-control-prev" type="button" data-bs-target="#destinationCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Anterior</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#destinationCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Siguiente</span>
                            </button>
                        </div>
                    </div>
                }
                else
                {
                    <div class="no-images">
                        <i class="fas fa-image fa-3x mb-3"></i>
                        <p>No hay imágenes disponibles para este destino</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    /* Contenedor principal */
    .destination-detail-container {
        max-width: 1000px;
        margin: 40px auto;
        padding: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #fefefe;
    }

    /* Tarjeta de destino */
    .destination-card {
        background: #fff;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
        transition: box-shadow 0.3s ease;
    }

        .destination-card:hover {
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
        }

    /* Encabezado del destino */
    .destination-header {
        background: linear-gradient(135deg, #0d47a1, #1976d2);
        color: white;
        padding: 30px;
        border-bottom: none;
    }

    .destination-title {
        font-weight: 800;
        font-size: 28px;
        margin: 0;
    }

    /* Sección de información */
    .info-section {
        padding: 25px 30px;
    }

    .section-title {
        color: #0d47a1;
        font-weight: 700;
        margin-bottom: 18px;
        font-size: 20px;
        display: flex;
        align-items: center;
        border-bottom: 2px solid #e3f2fd;
        padding-bottom: 6px;
    }

        .section-title i {
            margin-right: 10px;
            font-size: 1.2em;
            color: #1565c0;
        }

    .detail-item {
        margin-bottom: 16px;
    }

    .detail-label {
        font-weight: 600;
        color: #37474f;
        margin-bottom: 4px;
        display: block;
    }

    .detail-value {
        color: #607d8b;
        line-height: 1.6;
    }

        /* Estilo para descripción multilínea */
        .detail-value.description {
            white-space: pre-line;
        }

    /* Carrusel */
    .images-section {
        margin-top: 30px;
        padding: 20px 30px;
        border-top: 1px solid #e0e0e0;
        background-color: #fafafa;
        border-radius: 0 0 16px 16px;
    }

    .images-title {
        color: #0d47a1;
        font-weight: 700;
        margin-bottom: 20px;
        text-align: center;
        font-size: 20px;
    }

    .carousel-container {
        max-width: 750px;
        margin: 0 auto;
    }

    .carousel-item img {
        height: 350px;
        object-fit: cover;
        border-radius: 12px;
    }

    .carousel-control-prev,
    .carousel-control-next {
        width: 6%;
    }

    .carousel-indicators {
        bottom: -35px;
    }

        .carousel-indicators button {
            background-color: #cfd8dc;
        }

        .carousel-indicators .active {
            background-color: #1976d2;
        }

    .no-images {
        text-align: center;
        padding: 30px;
        color: #90a4ae;
        font-style: italic;
    }
</style>


@section Scripts {
    <script>
        // Inicializar el carrusel
        var carousel = new bootstrap.Carousel(document.getElementById('destinationCarousel'), {
            interval: 5000, // Cambia cada 5 segundos
            wrap: true
        });
    </script>
}